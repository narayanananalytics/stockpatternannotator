# Stock Pattern Annotator - Docker Environment Variables
# Copy this file to .env and update with your values

# ===== Database Configuration =====
# PostgreSQL settings (if using postgres service)
POSTGRES_USER=stockpattern
POSTGRES_PASSWORD=stockpattern123
POSTGRES_DB=stockpatterns
POSTGRES_PORT=5432

# Database URL (choose one)
# PostgreSQL:
DATABASE_URL=postgresql://stockpattern:stockpattern123@postgres:5432/stockpatterns
# SQLite (simpler, for development):
# DATABASE_URL=sqlite:////data/databases/stockpatterns.db

# ===== API Keys =====
# Polygon.io API key (get from https://polygon.io)
POLYGON_API_KEY=your_api_key_here

# ===== RL Training Configuration =====
# Device: cpu or cuda
DEVICE=cuda

# Training timesteps
TOTAL_TIMESTEPS=100000

# Model save path
MODEL_SAVE_PATH=/data/models/pattern_trading_agent

# Results save path
BACKTEST_SAVE_PATH=/data/results/backtest.csv

# ===== Service Ports =====
TENSORBOARD_PORT=6006
JUPYTER_PORT=8888

# ===== GPU Configuration =====
# Which GPU to use (0, 1, etc. or 'all')
NVIDIA_VISIBLE_DEVICES=0

# ===== Optional Settings =====
# Python logging level
LOG_LEVEL=INFO

# Number of parallel workers
NUM_WORKERS=4
